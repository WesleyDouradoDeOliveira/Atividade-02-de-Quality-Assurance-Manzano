package Exercicios;
public class Exercicio01EstruturaFormaanzano01 {
public static void main(String[] args) {
		for(int i = 15; i <=200; i++) {
			int quadrado  = i*i;
			System.out.println("O quadrado de :"+i+"é:"+quadrado);	
}
}
}



package Exercicios;
import java.util.Scanner;
public class Exercicio02EstruturaFormaazano01 {	
public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Digite um numero para saber a tabuada");
		int valor=sc.nextInt();
		for(int i = 1; i < 11; i++) {
			System.out.println(valor + "X"+ i+ "="+valor*i);	
sc.close();
}	
}
}



package Exercicios;
public class Exercicio03EstruturaFormaanzano01 {
public static void main(String[] args) {
		int soma = 0;
		for(int i = 1; i <= 100; i++) {
			soma= soma+i;
		}
		System.out.println("A soma dos valores é igual : "+soma);
	}
}



package Exercicios;
public class Exercicio04EstruturaFormaanzano01 {
public static void main(String[] args) {
		int somatorio = 0;
		for(int i = 1; i < 501; i++) {
			if(i % 2 == 0) {
				somatorio = somatorio + i;	
				System.out.println("O valor total da soma é :" +somatorio);
			}
		}
	}
}



